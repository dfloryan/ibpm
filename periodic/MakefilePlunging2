include ../config/make.inc

TARGETS = plunging2
OBJECTS = plunging2.o

LDLIBS = -lfftw3 -lm
MAKEDEPEND = gcc -MM

LDFLAGS += $(lib_dirs)
CXXFLAGS += -I../src $(include_dirs)
CXXFLAGS += -I./Newton # for Newton solver headers
CXXFLAGS += -I. # for Eigen headers
CXXFLAGS += -std=c++11

IBPMLIB = libibpm.a 

.PHONY: lib clean depend

all: $(TARGETS)

$(TARGETS) : $(OBJECTS) lib
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o $@ $(OBJECTS) ../build/$(IBPMLIB) $(LDLIBS)

lib:
	cd ../build && $(MAKE)

%.o : %.cc
	$(CXX) $(CXXFLAGS) -c $^

% : %.cc

clean:
	-$(RM) -r *.o $(TARGETS)
	-$(RM) tecplot/*.plt

depend:
	$(MAKEDEPEND) $(CXXFLAGS) *.cc > .depend

-include .depend
